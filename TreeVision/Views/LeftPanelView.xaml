<UserControl x:Class="TreeVision.LeftPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:treeVision="clr-namespace:TreeVision"
             xmlns:cal="http://www.caliburnproject.org"
             cal:Bind.Model="{Binding .}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance treeVision:LeftPanelViewModel}">

    <UserControl.Resources>
        <HierarchicalDataTemplate x:Key="LeafTemplate" DataType="treeVision:Leaf" ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Title}" Margin="0,0,20,0"/>
        </HierarchicalDataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <TreeView ItemsSource="{Binding RootCollection}" ItemTemplate="{DynamicResource LeafTemplate}"
                  Background="AntiqueWhite" Foreground="Black"/>
    </Grid>
</UserControl>
