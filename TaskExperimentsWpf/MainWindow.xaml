<Window x:Class="TaskExperimentsWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" >
    <StackPanel>
        <TextBlock Height="100"/>
        <TextBlock Name="Tb1" Width="300" Margin="5"/>
        <Button Content="Press me!" Width="120" Margin="5" Click="Button_Click"/>
        <StackPanel Orientation="Horizontal">
            <Button Content="Start" Width="100" Margin="5" Click="Button_Click_1"/>
            <Button Content="Interrupt" Width="100" Margin="5" Click="Button_Click_2"/>
            <TextBlock Name="TbLoop" Margin="5" Width="300"/>
        </StackPanel>
        <ProgressBar Name="MyProgressBar" Height="15" Margin="5"></ProgressBar>
    </StackPanel>
</Window>
