<Window x:Class="Iit.Fibertest.WpfCommonViews.WaitView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfCommonViews="clr-namespace:Iit.Fibertest.WpfCommonViews"
        mc:Ignorable="d"
        SizeToContent="Height" Width="630" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <ProgressBar DockPanel.Dock="Bottom" Margin="15,15,15,35" Height="6" IsIndeterminate="True" 
                     Foreground="LimeGreen" Background="White" BorderBrush="White"/>
        <StackPanel VerticalAlignment="Center" >
            <ItemsControl ItemsSource="{Binding Lines}" Margin="100,25,100,50">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="wpfCommonViews:MyMessageBoxLineModel">
                        <TextBlock Text="{Binding Line}" TextAlignment="Center" TextWrapping="Wrap" Margin="5"
                                   FontWeight="{Binding FontWeight}" Foreground="{Binding Foreground}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </DockPanel>
</Window>
