<Window x:Class="Broadcaster2.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:broadcaster2="clr-namespace:Broadcaster2"
        WindowStartupLocation="CenterScreen" Width="600" Height="500">

    <TabControl>
        <TabItem Header="          GSM        ">
            <broadcaster2:GsmView DataContext="{Binding GsmViewModel}"/>
        </TabItem>
        <TabItem Header="          MSMQ       ">
            <broadcaster2:MsmqView DataContext="{Binding MsmqViewModel}"/>
        </TabItem>
        <TabItem Header="          SNMP       " IsSelected="True">
            <broadcaster2:SnmpView DataContext="{Binding SnmpViewModel}"/>
        </TabItem>
    </TabControl>

</Window>