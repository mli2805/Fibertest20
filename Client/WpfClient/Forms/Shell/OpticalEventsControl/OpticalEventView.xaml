<Window x:Class="Iit.Fibertest.Client.OpticalEventView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OpticalEventView" Height="300" Width="300" >
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding OpticalEventVm.Nomer}" Width="50" Margin="5"/>
            <TextBlock Text="{Binding OpticalEventVm.EventRegistrationTimestamp}" Width="200" Margin="5"/>
        </StackPanel>
        <TextBlock Text="{Binding OpticalEventVm.TraceTitle}" Width="250" Margin="5" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding OpticalEventVm.RtuTitle}" Width="250" Margin="5" HorizontalAlignment="Left"/>
        <TextBlock Text="{Binding OpticalEventVm.TraceState}" Width="250" Margin="5" HorizontalAlignment="Left"/>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="Save" Width="120"/>
            <Button Content="Cancel" Width="120"/>
        </StackPanel>
    </StackPanel>
</Window>
