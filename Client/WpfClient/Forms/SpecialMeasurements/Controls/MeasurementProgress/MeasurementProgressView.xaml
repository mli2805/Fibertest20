<UserControl x:Class="Iit.Fibertest.Client.MeasurementProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White" Width="450">
        <StackPanel>
            <TextBlock Margin="20,20,10,10" Text="{Binding Message1}" FontWeight="Bold"/>
            <TextBlock Margin="20,0,10,20" Text="{Binding Message}" FontWeight="Bold"/>
            <ProgressBar Margin="10, 10, 10, 20" Height="18" IsIndeterminate="True"/>
        </StackPanel>
    </Border>
 
</UserControl>
