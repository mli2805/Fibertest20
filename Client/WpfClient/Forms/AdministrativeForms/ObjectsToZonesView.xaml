<Window x:Class="Iit.Fibertest.Client.ObjectsToZonesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:client="clr-namespace:Iit.Fibertest.Client"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance client:ObjectsToZonesViewModel}">
    <StackPanel>
        <DataGrid Name="Datagrid" ItemsSource="{Binding TableForBinding, Mode=TwoWay}" CanUserAddRows="False" 
              FrozenColumnCount="2" Margin="5" BeginningEdit="Datagrid_BeginningEdit" LoadingRow="Datagrid_LoadingRow"  />
        <StackPanel Margin="5" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Save" Name="Save" IsDefault="True" Width="100" Height="20" Margin="5"/>
            <Button Content="Cancel" Name="Cancel" IsCancel="True" Width="100" Height="20" Margin="5"/>
        </StackPanel>
    </StackPanel>
</Window>
