<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="NetTcpBinding_IWcfServiceForClient">
          <security mode="None" />
        </binding>
        <binding name="BindingWithNoSecurity" receiveTimeout="00:15:00"
                 sendTimeout="00:15:00" maxBufferPoolSize="2147483647" maxBufferSize="2147483647"
                 maxReceivedMessageSize="2147483647">
          <readerQuotas maxDepth="32" maxStringContentLength="65535" maxArrayLength="2147483647"
                        maxBytesPerRead="2147483647" maxNameTableCharCount="255" />
          <security mode="None" />
        </binding>
        <binding name="NetTcpBinding_IRtuWcfService">
          <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>
    <client>
      <endpoint address="net.tcp://localhost:11840/WcfServiceForClient/"
                binding="netTcpBinding" bindingConfiguration="NetTcpBinding_IWcfServiceForClient"
                contract="WcfServiceForClientLibrary.IWcfServiceForClient"
                name="NetTcpBinding_IWcfServiceForClient">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
      
      <endpoint address="net.tcp://localhost:11842/RtuWcfService" binding="netTcpBinding"
                bindingConfiguration="NetTcpBinding_IRtuWcfService" contract="RtuWcfServiceLibrary.IRtuWcfService"
                name="NetTcpBinding_IRtuWcfService">
        <identity>
          <dns value="localhost" />
        </identity>
      </endpoint>
    </client>

    <services>
      <service
        behaviorConfiguration="ClientWcfServiceLibrary.ClientWcfServiceBehavior"
        name="ClientWcfServiceLibrary.ClientWcfService">

        <endpoint address="" binding="netTcpBinding" bindingConfiguration="BindingWithNoSecurity"
                  contract="ClientWcfServiceLibrary.IClientWcfService">
          <identity>
            <dns value="localhost" />
          </identity>
        </endpoint>

        <endpoint address="mex" binding="mexTcpBinding" bindingConfiguration="" contract="IMetadataExchange" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:11843/ClientWcfService" />
          </baseAddresses>
        </host>

      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="ClientWcfServiceLibrary.ClientWcfServiceBehavior">
          <serviceMetadata httpGetEnabled="false" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>