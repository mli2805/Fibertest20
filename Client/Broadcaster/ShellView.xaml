<Window x:Class="Broadcaster.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:broadcaster="clr-namespace:Broadcaster"
        WindowStartupLocation="CenterScreen" Width="600" Height="500">

    <TabControl>
        <TabItem Header="          GSM        ">
            <broadcaster:GsmView DataContext="{Binding GsmViewModel}"/>
        </TabItem>
        <TabItem Header="          MSMQ       ">
            <broadcaster:MsmqView DataContext="{Binding MsmqViewModel}"/>
        </TabItem>
        <TabItem Header="       SNMP Traps      " IsSelected="True">
            <TabControl Margin="0, 10, 0,0">
                <TabItem Header="        Fibertest     ">
                    <broadcaster:SnmpView DataContext="{Binding SnmpViewModel}"/>
                </TabItem>
                <TabItem Header="         Huawei      " IsSelected="True">
                    <broadcaster:HuaweiTrapView DataContext="{Binding HuaweiTrapViewModel}"/>
                </TabItem>

            </TabControl>
        </TabItem>
    </TabControl>

</Window>