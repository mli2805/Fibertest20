<UserControl x:Class="Setup.InstallationFolderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:setup="clr-namespace:Setup"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance setup:InstallationFolderViewModel}">
    <DockPanel>
        <setup:HeaderView DockPanel.Dock="Top" DataContext="{Binding HeaderViewModel}"/>
        <TextBlock DockPanel.Dock="Top" Margin="5" TextWrapping="Wrap"
                   Text="Setup will install IIT Fibertest 2.0 in the following folder. To install in a different folder, click ...."/>
        <TextBlock DockPanel.Dock="Bottom" Margin="5" TextWrapping="Wrap"
                   Text="Space available: "/>
        
        <GroupBox DockPanel.Dock="Bottom" Header="Destination Folder">
            <DockPanel>
                <Button DockPanel.Dock="Right" Margin="5" Width="80" Content="Browse..."/>
                <TextBlock Text="C:\IIT-Fibertest" Margin="5" Background="LightGray"/>
            </DockPanel>
        </GroupBox>
        <StackPanel></StackPanel>
    </DockPanel>
</UserControl>
