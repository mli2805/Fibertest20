<UserControl x:Class="Setup.LicenseAgreementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:setup="clr-namespace:Setup"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance setup:LicenseAgreementViewModel}">
    <DockPanel>
        <setup:HeaderView DockPanel.Dock="Top" DataContext="{Binding HeaderViewModel}"/>
        <TextBlock DockPanel.Dock="Bottom" Margin="15,5" TextWrapping="Wrap" Text="{Binding Text1}"/>
        <DocumentViewer Margin="5" Document="{Binding FixedDocumentSequence}"/>
    </DockPanel>
</UserControl>

