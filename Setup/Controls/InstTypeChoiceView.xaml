<UserControl x:Class="Iit.Fibertest.Setup.InstTypeChoiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:setup="clr-namespace:Iit.Fibertest.Setup"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance setup:InstTypeChoiceViewModel}">
    <DockPanel>
        <setup:HeaderView DockPanel.Dock="Top" DataContext="{Binding HeaderViewModel}"/>
        <TextBlock DockPanel.Dock="Top" Margin="15,5" Text="{Binding Text1}"/>
        <StackPanel DockPanel.Dock="Top" Margin="15,5" Orientation="Horizontal">
            <TextBlock Margin="0,5,5,5" Text="{Binding Text2}"/>
            <ComboBox Margin="10,5,5,5" Width="150" ItemsSource="{Binding InstTypes}" SelectedItem="{Binding SelectedType, Mode=TwoWay}"/>
        </StackPanel>
    </DockPanel>
</UserControl>
