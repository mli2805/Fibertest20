<Window x:Class="LicenseMaker.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="25,5,5,10">
            <Button Name="SaveAsFile" Content="Save as file" Width="100" Height="22" Margin="5"/>
            <Button Name="Close" Content="Close" Width="100" Height="22" Margin="5"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Left" Width="100" Margin="5">
            <TextBlock Text="Owner" Margin="5" HorizontalAlignment="Right"/>
            <TextBlock Text="RTU" Margin="5" HorizontalAlignment="Right"/>
            <TextBlock Text="Client stations" Margin="5" HorizontalAlignment="Right"/>
            <TextBlock Text="SuperClient" Margin="5" HorizontalAlignment="Right"/>
        </StackPanel>
        <StackPanel Margin="5">
            <TextBox Text="{Binding License.Owner}" Margin="5" HorizontalAlignment="Stretch"/>
            <TextBox Text="{Binding License.Rtu}" Margin="5" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </DockPanel>

</Window>