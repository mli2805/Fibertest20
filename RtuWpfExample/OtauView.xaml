<Window x:Class="Iit.Fibertest.RtuWpfExample.OtauView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Iit.Fibertest.RtuWpfExample"
        mc:Ignorable="d"
        Title="OtauView" SizeToContent="WidthAndHeight">
    <StackPanel>
        <DockPanel>
            <TextBlock Text="Ip address" Margin="5" DockPanel.Dock="Left" Width="100" TextAlignment="Right"/>
            <TextBox Margin="5" HorizontalAlignment="Stretch"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Tcp port" Margin="5" DockPanel.Dock="Left" Width="100" TextAlignment="Right"/>
            <TextBox Margin="5" HorizontalAlignment="Stretch"/>
        </DockPanel>
        <TextBlock Margin="5" Background="AliceBlue"/>
        <Button Content="Initialize" Margin="5"/>
        <TextBlock Height="30"/>
        <DockPanel Margin="0,0,0,10">
            <ComboBox Margin="5" Width="150" DockPanel.Dock="Left"/>
            <TextBox Margin="5" Width="33"/>
            <Button Margin="5" Content="Set active optical port" Width="150"/>
        </DockPanel>
    </StackPanel>
</Window>
