<Window x:Class="Iit.Fibertest.RtuWpfExample.WcfClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rtuWpfExample="clr-namespace:Iit.Fibertest.RtuWpfExample"
        mc:Ignorable="d"
        Title="WcfClientView" Height="300" Width="300" WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance rtuWpfExample:WcfClientViewModel}">
    <StackPanel>
        <TextBox Margin="5,15,5,5" Text="{Binding RtuServiceIp}"/>
        <Button Name="Initialize" Margin="5" Height="25" Width="120" Content="Initialize RTU"/>
        <TextBlock Name="InitResultBlock" Margin="5" Height="25" Text="{Binding InitResultString}"/>
        <Button Name="StartMonitoring" Margin="5" Height="25" Width="120" Content="Start Monitoring"/>
        <Button Name="StopMonitoring" Margin="5" Height="25" Width="120" Content="Stop Monitoring"/>
    </StackPanel>
</Window>
